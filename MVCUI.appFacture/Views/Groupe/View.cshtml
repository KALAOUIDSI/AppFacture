@model Domain.appFacture.FACTGROUPE

@{
    ViewBag.Title = "Groupe : Visualiser";
}
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index","Home")">Accueil
                </a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="@Url.Action("Index")">Groupes
                </a>
                <i class="fa fa-angle-right"></i>
            </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
    </div>
</div>
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-reorder"></i>
            Groupe <small>Visualiser</small>
        </div>
    </div>

    <div class="portlet-body form">
        <div class="EditForm form-horizontal">
            <div class="form-body">
                <div class="form-group">
                    <label class="col-md-3 control-label">Nom du groupe</label>
                    <div class="col-md-4">
                        @Html.TextBoxFor(c => c.LIBELLEGROUPE, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Interfaces</label>
                    <div class="col-md-4">
                        <ul>
                            @foreach (Domain.appFacture.FACTINTERFACE item in Model.FACTINTERFACE)
                            {
                                <li>@item.LIBELLEINTERFACE</li>
                            }
                        </ul>
                    </div>
                </div>
                
            </div>
            <div class="form-actions fluid">
                <div class="col-md-offset-3 col-md-9">
                    <a href="@Url.Action("Index", new { keepFilters = true })" class="btn default">Retour</a>
                </div>
            </div>
        </div>
    </div>
</div>

