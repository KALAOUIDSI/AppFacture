    <script>
        jQuery(document).ready(function () {
            App.init();

            jQuery.extend(jQuery.validator.messages, {
                required: ""
            });
            $('.submit').click(function (e) {
                e.preventDefault();
                if ($('.site').val() != null && $('.site').val() != -1) {
                    $('.EditForm').submit();
                }
                else {
                    $.ajax({
                        type: "POST",
                        url: "@Url.Action("isMultiSites","Home")",
                        content: "application/text; charset=utf-8",
                        data: { Login: $('.Login').val(), Password: $('.Password').val() },
                        success: function (d) {
                            if (d == "True") {
                                $('.siteModal').removeClass("hidden");
                                $('.Login').attr('readonly', true);
                                $('.Login').addClass('input-disabled');
                                $('.Password').attr('readonly', true);
                                $('.Password').addClass('input-disabled');
                                $.ajax({
                                    type: "POST",
                                    url: "@Url.Action("refreshSite","Home")",
                                    content: "application/json; charset=utf-8",
                                    dataType: "json",
                                    data: { Login: $('.Login').val() },
                                    success: function (d) {
                                        $('.site').html(' ');
                                        $.each(d, function (i, val) {
                                            $('.site').append($('<option>').text(val.libelle).attr('value', val.Code));
                                        });
                                    },
                                    error: function (xhr, textStatus, errorThrown) {
                                        // TODO: Show error
                                        alert('Erreur réseau : merci de réessayer');
                                    }
                                });
                                //$('.EditForm').submit();
                            }
                            else
                                $('.EditForm').submit();

                        },
                        error: function (xhr, textStatus, errorThrown) {
                            // TODO: Show error
                            alert('Erreur réseau : merci de réessayer=' + errorThrown);
                        }

                    });
                }
            });

            $('.EditForm').validate({
                errorElement: 'span', //default input error message container
                errorClass: 'help-block', // default input error message class
                focusInvalid: false, // do not focus the last invalid input
                ignore: "",
                invalidHandler: function (event, validator) { //display error alert on form submit
                    $('.alert-success').hide();
                    $('.alert-danger').show();
                },
                highlight: function (element) { // hightlight error inputs
                    $(element)
                        .closest('.form-group').addClass('has-error'); // set error class to the control group
                },
                unhighlight: function (element) { // revert the change done by hightlight

                },
                success: function (label, element) {
                    var icon = $(element).parent('.input-icon').children('i');
                    //$(element).closest('.form-group').removeClass('has-error').addClass('has-success'); // set success class to the control group
                    //icon.removeClass("fa-warning").addClass("fa-check");
                }
            });
            @if (Html.ValidationSummary(true) != null)
            {
            <text>
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "positionClass": "toast-top-right",
                "onclick": null,
                "showDuration": "1000",
                "hideDuration": "1000",
                "timeOut": "3000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            toastr.error("@TempData["message"]", "Erreur");
            </text>
            }

            //UIExtendedModals.init();


        });
    </script>
