<body class="login">
    <div class="logo"></div>
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGO -->
        <div>
            @*<a href="@Url.Action("Index","Home")">
                    <img src="@Url.Content("~/assets/img/logo.png")" alt="logo" style="max-height: 30px; background-color: white; margin: 6px;" />
                </a>*@
