            </a>
        </div>
        <!-- END LOGO -->
        <!-- BEGIN LOGIN FORM -->
        @using (Html.BeginForm("login", "Home", FormMethod.Post, new { @class = "EditForm form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <h3 class="form-title">Se connecter</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span>
                    Merci d'entrer votre identifiant et mot de passe.
                </span>
            </div>
            <div class="form-group">

                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">Identifiant</label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control required placeholder-no-fix Login" type="text" placeholder="Identifiant" name="Login" />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">Mot de passe</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control required placeholder-no-fix Password" type="password" placeholder="Mot de passe" name="Password" />
                </div>
            </div>

            <div class="siteModal hidden" title="choose site">
                <div class="form-group">
                    <label class="control-label visible-ie8 visible-ie9">Site</label>
                    <div class="input-icon">
                        @Html.DropDownList("IDSITE", new List<SelectListItem>(), new { @class = "form-control form-filter site input-sm" })


                    </div>
                </div>
            </div>


            <div class="form-actions">
                @*<label class="checkbox">
                        <input type="checkbox" name="remember" value="1" />
                        Se rappeler de moi
                    </label>*@
                <button type="submit" class="btn green pull-right submit">
                    Se connecter <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>

        }
        <!-- END LOGIN FORM -->

    </div>
