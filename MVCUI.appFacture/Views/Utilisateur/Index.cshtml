<div class="row">
    <div class="col-md-12">
        <ul class="page-breadcrumb breadcrumb" style="margin-top: 0px; margin-bottom: 2px; padding-left: 0px; padding-right: 0px;">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index", "Home")">
                    Accueil
                </a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <i class="fa fa-user"></i>
                <a href="#">Utilisateurs
                </a>
            </li>
        </ul>
    </div>
</div>
<div class="portlet box green">
    <div class="portlet-title" style="padding-top: 0px;">
        @*<div class="caption">
                <i class="fa fa-user"></i>Utilisateurs
            </div>*@
    </div>
    <div class="portlet-body">
        <div id="sample_1_wrapper" class="dataTables_wrapper" role="grid">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <div class="dataTables_filter" id="sample_1_filter">
                        @using (Html.BeginForm("Index", "Utilisateur", FormMethod.Get, new { style = "display:inline" }))
                        {
                            <label>
                                <input id="search" name="search" type="text" placeholder = "Rechercher" class="form-control input input-inline" value="@Model.Search"></label>
                            <a href="#" title="Rechercher" class="btn submitSearch default dark">
                                <i class="fa fa-search"></i>
                            </a>
                        }
                        <a href="#" title="Recherche avancée" class="btn advSearchBtn default green"><i class="fa fa-search-plus"></i></a>
                    </div>
                    <div class="dataTables_filter"></div>

                </div>
                <div class="col-md-6 col-sm-12">
                    <div style="float: right">
                        <a href="@Url.Action("Create")" class="btn green"><i class="fa fa-pencil"></i>Ajouter un nouvel utilisateur
                        </a>

                    </div>
                </div>

            </div>

            <div class="table-scrollable">
                <table class="table table-striped table-bordered table-hover dataTable" id="sample_1" aria-describedby="sample_1_info">
                    <thead>
                        <tr role="row">
                            <th class="sorting_disabled" role="columnheader" style="width: 26px;">#</th>
                            <th class="@(Model.SortBy == 1 ? (Model.IsAsc ? "sorting_asc" : "sorting_desc") : "sorting")" rel="@Url.Action("Index", new { advSearch=Model.AdvSearch, search = Model.Search, sortby = 1, isasc = (Model.SortBy == 1 ? (Model.IsAsc ? false : true) : true) })" title="Nom">Nom</th>
                            <th class="@(Model.SortBy == 3 ? (Model.IsAsc ? "sorting_asc" : "sorting_desc") : "sorting")" rel="@Url.Action("Index", new { advSearch=Model.AdvSearch, search = Model.Search, sortby = 3, isasc = (Model.SortBy == 3 ? (Model.IsAsc ? false : true) : true) })" title="Prénom">Prénom</th>
                            <th class="@(Model.SortBy == 2 ? (Model.IsAsc ? "sorting_asc" : "sorting_desc") : "sorting")" rel="@Url.Action("Index", new { advSearch=Model.AdvSearch, search = Model.Search, sortby = 2, isasc = (Model.SortBy == 2 ? (Model.IsAsc ? false : true) : true) })" title="E-mail">E-mail</th>
                            <th class="@(Model.SortBy == 4 ? (Model.IsAsc ? "sorting_asc" : "sorting_desc") : "sorting")" rel="@Url.Action("Index", new { advSearch=Model.AdvSearch, search = Model.Search, sortby = 4, isasc = (Model.SortBy == 4 ? (Model.IsAsc ? false : true) : true) })" title="Identifiant">Identifiant</th>
                            @*<th class="@(Model.SortBy == 5 ? (Model.IsAsc ? "sorting_asc" : "sorting_desc") : "sorting")" rel="@Url.Action("Index", new { advSearch=Model.AdvSearch, search = Model.Search, sortby = 5, isasc = (Model.SortBy == 5 ? (Model.IsAsc ? false : true) : true) })" title="Mot de passe">Mot de passe</th>*@
                            <th class="@(Model.SortBy == 6 ? (Model.IsAsc ? "sorting_asc" : "sorting_desc") : "sorting")" rel="@Url.Action("Index", new { advSearch=Model.AdvSearch, search = Model.Search, sortby = 6, isasc = (Model.SortBy == 6 ? (Model.IsAsc ? false : true) : true) })" title="Site">SITE</th>
                            <th class="@(Model.SortBy == 7 ? (Model.IsAsc ? "sorting_asc" : "sorting_desc") : "sorting")" rel="@Url.Action("Index", new { advSearch=Model.AdvSearch, search = Model.Search, sortby = 7, isasc = (Model.SortBy == 7 ? (Model.IsAsc ? false : true) : true) })" title="Actif">Actif</th>
                            <th title="Groupes">Groupes</th>
                            <th title="Actions">Actions</th>
                        </tr>
                    </thead>

                    <tbody>

                        <tr role="row" class="filter @if(Model.AdvSearch==""){<text>display-hide</text>}">
                            <td rowspan="1" colspan="1"></td>
                            <td rowspan="1" colspan="1">
                                <input type="text" class="form-control form-filter input-sm" value="@Model.AdvSearchFilters.nom" name="nom">
                            </td>
                            <td rowspan="1" colspan="1">
                                <input type="text" class="form-control form-filter input-sm" value="@Model.AdvSearchFilters.prenom" name="prenom">
                            </td>
                            <td rowspan="1" colspan="1">
                                <input type="text" class="form-control form-filter input-sm" value="@Model.AdvSearchFilters.email" name="email">
                            </td>
                            <td rowspan="1" colspan="1">
                                <input type="text" class="form-control form-filter input-sm" value="@Model.AdvSearchFilters.login" name="login">
                            </td>
                            <td rowspan="1" colspan="1">
                                <input type="text" class="form-control form-filter input-sm" value="@Model.AdvSearchFilters.site" name="site">
                            </td>
                            @*<td rowspan="1" colspan="1">
                                <input type="text" class="form-control form-filter input-sm" value="@Model.AdvSearchFilters.password" name="password">
                            </td>*@
                            @*<td rowspan="1" colspan="1">
                                @Html.DropDownList("site", new SelectList(ViewBag.listSites, "IDSITE", "LIBELLESITE",Model.AdvSearchFilters.site), new { @class = "form-control form-filter input-sm" })
                            </td>*@
                            <td rowspan="1" colspan="1" class="form-horizontal">
                                <div class="radio-list">
                                    <div><label><span class=""><input type="radio" class="form-filter" id="actif1" name="actif" value="1" checked=""></span> Oui </label></div>
                                    <div><label><span class=""><input type="radio" class="form-filter" id="actif0" name="actif" value="0" checked=""></span> Non </label></div>
                                    <div><label><span class=""><input type="radio" class="form-filter" id="actif_" name="actif" value="" checked=""></span> Non filtré </label></div>
                            </div>
                            </td>
                            <td rowspan="1" colspan="1">
                                @Html.DropDownList("groupe", new SelectList(ViewBag.listGroupes, "IDGROUPE", "LIBELLEGROUPE",Model.AdvSearchFilters.groupe), new { @class = "form-control form-filter input-sm" })
                            </td>
                            <td>
                                <div class="margin-bottom-5">
                                    @using (Html.BeginForm("Index", "Utilisateur", FormMethod.Get, new { style = "display:inline" }))
                                    {
                                        @Html.Hidden("advSearch", "")
                                        <button class="btn btn-sm green filter-submit margin-bottom"><i class="fa fa-search"></i> Rechercher</button>
                                    }
                                </div>
                                <a class="btn default" href="@Url.Action("Index")"><i class="fa fa-times"></i> Annuler</a>
                            </td>
                        </tr>
                        @if (!Model.Utilisateurs.Any())
                        {
                            <tr>
                                <td colspan="8">
                                    <h3>Aucun élement trouvé !</h3>
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model.Utilisateurs)
                            {
                            <tr>
                                <td class="highlight">
                                        <div class="success">
                                        </div>
                                        @item.IDUTILISATEUR
                                    </td>
                                <td>
                                    @item.NOM
                                </td>
                                <td>
                                    @item.PRENOM
                                </td>
                                <td>
                                    @item.EMAIL
                                </td>
                                <td>
                                    @item.LOGIN
                                </td>
                                @*<td>
                                    @item.PASSWORD
                                </td>*@
                                <td>
                                    <ul>
                                        @foreach (Domain.appFacture.FACTSITE Site in item.FACTSITE1)
                                        {
                                            <li>@Site.LIBELLESITE</li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    @if (item.ACTIF == 1)
                                    {
                                        <span class="badge badge-success">Oui
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Non
                                        </span>
                                    }
                                </td>
                                <td>
                                    <ul>
                                        @foreach (Domain.appFacture.FACTGROUPE Groupe in item.FACTGROUPE)
                                        {
                                            <li>@Groupe.LIBELLEGROUPE</li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    <a href="@Url.Action("View", new { id = item.IDUTILISATEUR })" title="Visualiser" class="btn default yellow">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    @using (Html.BeginForm("Edit", "Utilisateur", FormMethod.Post, new { style = "display:inline" }))
                                    {
                                        @Html.Hidden("id", item.IDUTILISATEUR)
                                        <a href="#" title="Modifier" class="btn submitEdit default purple">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    }
                                    @using (Html.BeginForm("Delete", "Utilisateur", FormMethod.Post, new { style = "display:inline" }))
                                    {
                                        @Html.Hidden("id", item.IDUTILISATEUR)
                                        <a href="#" title="Supprimer" class="btn submitDelete default black">
                                            <i class="fa fa-trash-o"></i>
                                        </a>
                                    }

                                </td>
                            </tr>
        
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="row">
                <div class="col-md-3 col-sm-12">
                        @if (@Model.PagingInfo.TotalItems>0) {
                        <div class="well" style="margin-top: 10px;padding: 6px 12px;">
								<span>@Model.PagingInfo.TotalItems @(Model.PagingInfo.TotalItems>1?"éléments":"élément")</span> <span style="float:right">Page @Model.PagingInfo.CurrentPage / @Model.PagingInfo.TotalPages</span>
					    </div>
                        }
                    </div>
                    <div class="col-md-9 col-sm-12">
                        @if (@Model.PagingInfo.TotalItems>0) {
                        <div class="dataTables_paginate paging_bootstrap">
                            <ul class="pagination" style="visibility: visible;">
                                @Html.PageLinks(Model.PagingInfo, pageNum => Url.Action("Index", new { page = pageNum, advSearch=Model.AdvSearch, search = Model.Search, sortby = Model.SortBy, isasc = Model.IsAsc }))
                            </ul>
                        </div>
                        }
                    </div>

            </div>
            <div class="row">
                <div class="col-md-6 col-sm-12">
                </div>
                <div class="col-md-6 col-sm-12">
                    <div style="float: right">
                        <a href="@Url.Action("Create")" class="btn green"><i class="fa fa-pencil"></i>Ajouter un nouvel utilisateur
                        </a>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
@section Scripts
{
    <script>
        jQuery(document).ready(function () {

            @if(Model.AdvSearchFilters.actif=="1"){
            <text>
            $.uniform.update($('#actif1').attr('checked', true));
            $.uniform.update($('#actif0').attr('checked', false));
            $.uniform.update($('#actif_').attr('checked', false));
            </text>   
            }
            @if (Model.AdvSearchFilters.actif == "0")
             {
            <text>
            $.uniform.update($('#actif1').attr('checked', false));
            $.uniform.update($('#actif0').attr('checked', true));
            $.uniform.update($('#actif_').attr('checked', false));
            </text>   
             }
            @if (Model.AdvSearchFilters.actif == "")
             {
            <text>
            $.uniform.update($('#actif1').attr('checked', false));
            $.uniform.update($('#actif0').attr('checked', false));
            $.uniform.update($('#actif_').attr('checked', true));
            </text>   
             }
            $('.submitDelete').click(function (e) {
                if (confirm('Voulez vous vraiment supprimer cet utilisateur ?')) {
                    $(this).parent().submit();
                }
            });
            $('.submitEdit').click(function (e) {
                $(this).parent().submit();
            });
            $('.submitSearch').click(function (e) {
                $(this).parent().submit();
            });
            $('.advSearchBtn').click(function (e) {
                $('.filter').toggleClass('display-hide');
                $(this).html(function (i, html) {
                    return html === '<i class="fa fa-search-plus"></i>' ? '<i class="fa fa-search-minus"></i>' : '<i class="fa fa-search-plus"></i>';
                });
            });
            $('.filter-submit').click(function (e) {
                var loginForm = $('.form-filter').serializeArray();
                var loginFormObject = {};
                $.each(loginForm, function (i, v) {
                    if (v.value != "" && v.value != "-1")
                        loginFormObject[v.name] = v.value;
                });
                $('#advSearch').val(JSON.stringify(loginFormObject));
            });
            $('.sorting, .sorting_asc, .sorting_desc').click(function (e) {
                location.href = $(this).attr('rel');
            });
            @if (TempData["message"] != null)
            {
            <text>
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "positionClass": "toast-top-right",
                "onclick": null,
                "showDuration": "1000",
                "hideDuration": "1000",
                "timeOut": "3000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
            </text>
            }
            @if (TempData["state"] != null && TempData["message"] != null)
            {
                if (TempData["success"] == "true")
                {
                    if (TempData["state"] == "1")
                    {
                   <text>
            toastr.success("@TempData["message"]", "Insertion");
                   </text>
                    }
                    else if (TempData["state"] == "2")
                    {
                   <text>
            toastr.success("@TempData["message"]", "Modification");
                   </text>
                    }
                    else if (TempData["state"] == "3")
                    {
                   <text>
            toastr.success("@TempData["message"]", "Suppression");
                   </text>
                    }
                }
                else if (TempData["success"] == "false")
                {
                    if (TempData["state"] == "1")
                    {
                   <text>
            toastr.error("@TempData["message"]", "Insertion");
                   </text>
                    }
                    else if (TempData["state"] == "2")
                    {
                   <text>
            toastr.error("@TempData["message"]", "Modification");
                   </text>
                    }
                    else if (TempData["state"] == "3")
                    {
                   <text>
            toastr.error("@TempData["message"]", "Suppression");
            </text>
                    }
                }
            }
        });
    </script>
}
@section Styles
{
    <style>
        .page-content .page-breadcrumb.breadcrumb {
            background-color: #35aa47;
        }
    </style>
}